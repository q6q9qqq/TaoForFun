<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="model.Weibo" table="weibos">
		<id name="weiboid" type="int">
			<column name="weiboid" />
			<generator class="assigned" />
		</id>
		<property name="adder" type="java.lang.String">
			<column name="adder" />
		</property>
		<property name="content" type="java.lang.String">
			<column name="content" />
		</property>
		<property name="time" type="java.sql.Date">
			<column name="time" />
		</property>
		<set name="comments" lazy="false" inverse="true">
			<key column="weiboid" />
			<one-to-many class="model.Comment" />
		</set>
	</class>
</hibernate-mapping>